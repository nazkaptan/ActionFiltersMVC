@model User
@{
    ViewData["Title"] = "Login";
}

<div id="login">
    <h3 class="text-center text-white pt-5">Action Filter MVC</h3>
    <div class="container">
         <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-box" class="col-md-8 offset-2">
                <form id="login-form" class="form" method="post" asp-route-link="@ViewBag.Link">
                    <h3 class="text-center text-info">Login</h3>

                    <div class="form-group">
                        <label asp-for="UserName" class="text-info" >Username: </label>
                        <input asp-for="UserName" type="text" name="username" id="username" class="form-control" />
                    </div>

                     <div class="form-group">
                        <label asp-for="Password" class="text-info" >Password: </label>
                        <input asp-for="Password" type="password" name="Password" id="Password" class="form-control" />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            Role(Admin / User)
                            <input asp-for="UserRole" type="text" class="form-control" />
                        </div>
                        <div class="col-md-6 d-flex justify-content-end align-items-center">
                            <input type="submit" class="btn btn-info btn-lg" value="Login" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

